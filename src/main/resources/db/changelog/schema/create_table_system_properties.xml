<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_system_properties" author="pavlo.sivkovych">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="system_properties"/>
            </not>
        </preConditions>
        <createTable tableName="system_properties">
            <column name="name" type="varchar(16)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="datetime">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="system_properties"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
